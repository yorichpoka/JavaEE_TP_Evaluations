<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- servlet -->
    <servlet>
        <servlet-name>BaseController</servlet-name>
        <servlet-class>isib.war.controller.BaseController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>isib.war.controller.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EvaluationController</servlet-name>
        <servlet-class>isib.war.controller.EvaluationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuestionController</servlet-name>
        <servlet-class>isib.war.controller.QuestionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ErrorController</servlet-name>
        <servlet-class>isib.war.controller.ErrorController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AnswerController</servlet-name>
        <servlet-class>isib.war.controller.AnswerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>isib.war.controller.UserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>isib.war.controller.StudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TeacherController</servlet-name>
        <servlet-class>isib.war.controller.TeacherController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionTestController</servlet-name>
        <servlet-class>isib.war.controller.SessionTestController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardController</servlet-name>
        <servlet-class>isib.war.controller.DashboardController</servlet-class>
    </servlet>
    <!-- servlet-mapping -->
    <servlet-mapping>
        <servlet-name>BaseController</servlet-name>
        <url-pattern>/Base</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/Authentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EvaluationController</servlet-name>
        <url-pattern>/Evaluation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuestionController</servlet-name>
        <url-pattern>/Question</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorController</servlet-name>
        <url-pattern>/Error</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AnswerController</servlet-name>
        <url-pattern>/Answer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/User</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/Student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TeacherController</servlet-name>
        <url-pattern>/Teacher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionTestController</servlet-name>
        <url-pattern>/SessionTest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardController</servlet-name>
        <url-pattern>/Dashboard</url-pattern>
    </servlet-mapping>
    <!-- session-config -->
    <session-config>
        <session-timeout>
            6
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
            Authentication
        </welcome-file>
    </welcome-file-list>
    <error-page>
        <location>
            /Error
        </location>
    </error-page>
